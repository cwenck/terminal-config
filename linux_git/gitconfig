	name = Connor Wenck
[core]
    editor = vim
	excludesfile = ~/.gitignore
[push]
    default = simple
[credential]
	helper = store
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[tig]
    line-graphics = utf-8
    mouse = true
    mouse-scroll = 3
    main-view = line-number:no,interval=5 date:relative id:yes author:full commit-title:yes,graph,refs,overflow=no
[tig "color"]
    cursor = white blue bold
